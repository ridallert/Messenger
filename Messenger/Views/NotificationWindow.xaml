<UserControl x:Class="Messenger.Views.NotificationWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Style="{StaticResource DialogStyle}"
             MinWidth="230" MinHeight="45">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="ShowInTaskbar" Value="False"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
            <Setter Property="WindowStyle" Value="None" />
        </Style>
    </prism:Dialog.WindowStyle>
    <TextBlock Text="{Binding Message}" Margin="10,10,10,10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    <!--<DockPanel>
        <Button Content="Close" Command="{Binding CloseDialogCommand}" Margin="30,5,30,10" Width="100" Height="30" DockPanel.Dock="Bottom"/>
        <TextBlock Text="{Binding Message}" Margin="10,10,10,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </DockPanel>-->
</UserControl>
