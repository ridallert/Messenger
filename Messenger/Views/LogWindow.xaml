<UserControl x:Class="Messenger.Views.LogWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             MinHeight="400" MinWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <DataGrid Name="logDataGrid"
                  Grid.Column="0"
                  Grid.Row="0"
                  Grid.ColumnSpan="3"
                  Margin="10,10,10,5"
                  ItemsSource="{Binding EventList}"
                  FontFamily="Candara" FontSize="14"/>
        <DatePicker Grid.Row="1" Grid.Column="0" Margin="10,5,5,10"/>
        <DatePicker Grid.Row="1" Grid.Column="1" Margin="5,5,5,10"/>
        <Button Grid.Row="1" Grid.Column="2" Margin="5,5,10,10"/>
    </Grid>
    
</UserControl>
