<UserControl x:Class="Messenger.Views.LogWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"          
             Style="{StaticResource DialogStyle}">
    
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="ResizeMode" Value="CanResize"/>
            <Setter Property="ShowInTaskbar" Value="False"/>
            <Setter Property="SizeToContent" Value="Height"/>
            <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        </Style>
    </prism:Dialog.WindowStyle>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <DataGrid AutoGenerateColumns="False"
                  Name="logDataGrid"
                  Grid.Column="0"
                  Grid.Row="0"
                  Grid.ColumnSpan="5"
                  Margin="10,10,10,5"
                  ItemsSource="{Binding EventList}"
                  FontFamily="Candara" FontSize="14"
                  Background="White"
                  RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Event" Binding="{Binding Path=Type}" MinWidth="150"/>
                <DataGridTextColumn Header="Message" Binding="{Binding Path=Message}" Width="*"/>
                <DataGridTextColumn Header="Date/Time" Binding="{Binding Path=DateTime}" MinWidth="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Text="From:"
                   Grid.Column="0"
                   Grid.Row="1"
                   Margin="10,5,5,10"
                   VerticalAlignment="Center"/>
          
        <DatePicker Grid.Column="1"
                    Grid.Row="1"
                    Margin="5,5,5,10"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Background="White"
                    BorderThickness="1"
                    FontFamily="Candara"
                    FontSize="14"
                    SelectedDate="{Binding Path=From, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            
        <TextBlock Text="To:"
                    Grid.Column="2"
                    Grid.Row="1"
                    Margin="5,5,5,10"
                    VerticalAlignment="Center"/>

        <DatePicker Grid.Column="3"
                    Grid.Row="1"                    
                    Margin="5,5,5,10"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Background="White"
                    BorderThickness="1"
                    FontFamily="Candara" FontSize="14"
                    SelectedDate="{Binding Path=To, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        
        <Button Content="Load"
                Grid.Column="5"
                Grid.Row="1"
                Margin="5,5,10,10"/>

        <!--<Button Content="Close"
                Grid.Column="4"
                Grid.Row="2"
                Margin="5,5,10,10"/>-->
    </Grid>
    
</UserControl>
